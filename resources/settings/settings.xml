<settings>
    <setting propertyKey="@Properties.gears" title="@Strings.gears">
        <settingConfig type="numeric" readonly="false" min="1" max="20"/>
    </setting>
    <setting propertyKey="@Properties.power" title="@Strings.power">
        <settingConfig type="numeric" readonly="false" min="1" max="100"/>
    </setting>
    <setting propertyKey="@Properties.level" title="@Strings.level">
        <settingConfig type="numeric" readonly="false" min="1" max="5"/>
    </setting>
    <setting propertyKey="@Properties.track" title="@Strings.tracks">
        <settingConfig type="list">
            <listEntry value="0">@Strings.random</listEntry>
            <listEntry value="1">@Strings.morcan</listEntry>
            <listEntry value="2">@Strings.covatilla</listEntry>
            <listEntry value="3">@Strings.medium</listEntry>
            <listEntry value="4">@Strings.long</listEntry>
            <listEntry value="100">@Strings.custom</listEntry>
        </settingConfig>
    </setting>
    <setting propertyKey="@Properties.profile100" title="@Strings.custom">
        <settingConfig type="alphaNumeric" readonly="false"/>
    </setting>
</settings>    